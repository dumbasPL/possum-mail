{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "nezu",
  "main": "build/index.js",
  "scripts": {
    "dev": "tsoa spec-and-routes && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\" \"nodemon -w build/swagger.json --signal SIGHUP -x ts-node scripts/generateOpenapi.ts\"",
    "dev:openapi-generator": "ts-node scripts/generateOpenapi.ts",
    "build": "tsoa spec-and-routes && tsc && shx cp -r locales build/",
    "build:api-client": "tsoa spec && openapi-generator-cli generate",
    "start": "node build/src/index.js",
    "lint": "eslint . --ext .ts",
    "migrator": "ts-node src/migrations.ts"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.10",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^2.0.20",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@automapper/sequelize": "^8.7.7",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "generate-password": "^1.7.0",
    "i18next": "^22.0.6",
    "i18next-fs-backend": "^2.0.1",
    "i18next-http-middleware": "^3.2.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.26.0",
    "sequelize-typescript": "^2.1.5",
    "shared-types": "*",
    "sqlite3": "^5.1.2",
    "swagger-ui-express": "^4.6.0",
    "tslog": "^4.4.4",
    "tsoa": "^4.1.3",
    "tsyringe": "^4.7.0",
    "umzug": "^3.2.1"
  },
  "engines": {
    "node": ">=16"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/build"
        ]
      },
      "build:api-client": {
        "outputs": [
          "{workspaceRoot}/packages/api-client"
        ]
      }
    }
  }
}
